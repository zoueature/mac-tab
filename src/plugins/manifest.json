{
  "manifest_version": 3,
  "name": "YangDesktop",
  "description": "焕然一新的新标签页, 像使用OS一样使用浏览器",
  "version": "1.0.0",
  "action": {
    "default_title": "YangDesktop",
    "default_icon": "assets/images/logo.png",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "notifications",
    "bookmarks",
    "history",
    "alarms"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "16": "assets/images/logo.png",
    "48": "assets/images/logo.png",
    "128": "assets/images/logo.png"
  }
}